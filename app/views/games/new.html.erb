
<h1>Letras Aletarorias</h1>
<h2>Nuevo Juego</h2>

<ul class="letters"> 
  <% @letters.each do |letra| %>
    <li><%= letra.upcase %></li>
  <% end %>
</ul>
<p class="form-prefix">What is the longest word you can find?</p>
<form action="/score" method="POST" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  
  <input type="text" name="palabra" id="palabra" >
  <input type="submit" value="play!">
</form>
  